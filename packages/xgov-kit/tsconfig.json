{
  "compilerOptions": {
    "outDir": "./bin",
    "experimentalDecorators": true,
    "declaration": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
